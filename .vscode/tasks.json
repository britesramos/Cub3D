{
	"version": "2.0.0",
	"tasks": [
	  {
		"label": "C/C++: gcc build active file",
		"type": "shell",
		"command": "gcc", 
		"args": [
		  "${workspaceFolder}/*.c",  // This will include all C files in the workspace folder
		  "-o", 
		  "${workspaceFolder}/cub3D"  // Output executable file
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"],
		"detail": "Task to compile all C files into one executable"
	  }
	]
  }
  
  